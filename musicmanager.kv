<SongItem>:
    orientation: 'horizontal'
    padding: 10
    spacing: 10
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.8
        spacing: 2
        
        Label:
            text: root.title
            size_hint_y: 0.5
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
            shorten: True
        
        Label:
            text: f"{root.artist} - {root.album}"
            size_hint_y: 0.5
            font_size: '12sp'
            color: 0.7, 0.7, 0.7, 1
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
            shorten: True
    
    Label:
        text: root.duration
        size_hint_x: 0.2
        font_size: '12sp'
        color: 0.7, 0.7, 0.7, 1